<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/background_min_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/movie_poster_description" />

        <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:paddingTop="@dimen/details_padding_default"
            android:paddingRight="@dimen/details_padding_default"
            android:paddingLeft="@dimen/details_padding_default"/>

        <TextView
            android:id="@+id/details_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textStyle="italic"
            android:paddingRight="@dimen/details_padding_default"
            android:paddingLeft="@dimen/details_padding_default"/>
        <TextView
            android:id="@+id/details_vote_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:paddingRight="@dimen/details_padding_default"
            android:paddingLeft="@dimen/details_padding_default"/>
        <TextView
            android:id="@+id/details_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:paddingTop="5dp"
            android:paddingRight="@dimen/details_padding_default"
            android:paddingLeft="@dimen/details_padding_default"/>
    </LinearLayout>
</ScrollView>